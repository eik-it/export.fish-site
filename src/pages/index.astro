      function showResult() {
        const mustRegister = cb3?.checked || (cb1?.checked && cb2?.checked);

        questions?.classList.add('hidden');

        if (mustRegister) {
          resultJa?.classList.remove('hidden');
          resultNei?.classList.add('hidden');
          updateHeader('ja');
        } else {
          resultNei?.classList.remove('hidden');
          resultJa?.classList.add('hidden');
          updateHeader('nei');
        }
      }

      function resetQuiz() {
        checkboxes.forEach(cb => cb.checked = false);
        questions?.classList.remove('hidden');
        resultJa?.classList.add('hidden');
        resultNei?.classList.add('hidden');
        updateHeader('default');
      }

      submitBtn?.addEventListener('click', showResult);
      resetJaBtn?.addEventListener('click', resetQuiz);
      resetNeiBtn?.addEventListener('click', resetQuiz);
    });
  </script>

